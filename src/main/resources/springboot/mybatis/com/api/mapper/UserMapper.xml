<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="springboot.mybatis.com.api.mapper.UserMapper">
    <select id="getUser" resultType="springboot.mybatis.com.api.mapper.vo.UserVo">
        SELECT *
        FROM user
        WHERE id =  #{userId}
        LIMIT 1;
    </select>

    <select id="getAll" resultType="springboot.mybatis.com.api.mapper.vo.UserVo">
         SELECT * FROM user;
    </select>

</mapper>